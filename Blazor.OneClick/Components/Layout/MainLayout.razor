                        </MudLink>

                        @if (_userData?.FreezeDay != null)
                        {
                            <MudChip T="string" Class="fw-bold" Color="_freezeDayColor">до @_userData?.FreezeDay?.ToString("d")</MudChip>
                        }
                    </MudStack>
                </div>

                <MudSpacer />


                <div class="d-none d-md-block">
