                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Language" OnClick="@((e)=>LanguageToggle())" IconColor="Color.Surface">@_userData?.Language</MudNavLink>

                <MudDivider Style="flex-grow: initial;" Class="my-2" />
                <NavMenu NewTransactionCount="_newTransactionCount" />
            </MudDrawer>

            <MudDrawer @bind-Open="_drawerOpen" Class="left-menu" ClipMode="DrawerClipMode.Always" Color="Color.Secondary" Elevation="1">
                <NavMenu NewTransactionCount="_newTransactionCount" />
            </MudDrawer>
            <MudMainContent Class="content">
                @Body
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <MudLayout>


            @Body

        </MudLayout>
    </NotAuthorized>
